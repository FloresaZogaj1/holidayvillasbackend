// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Villa {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  type      String   // VIP, PREMIUM, etc.
  price     Decimal  @db.Decimal(10, 2)
  image     String?
  description String?
  bookings  Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  villaSlug String
  name      String
  email     String
  phone     String?
  checkIn   DateTime
  checkOut  DateTime
  guests    Int
  amount    Decimal  @db.Decimal(10, 2)
  status    String   // "pending" | "paid" | "confirmed" | "cancelled"
  source    String   @default("website") // "website" | "booking_com" | "manual"
  bookingReference String? // External booking reference (e.g., Booking.com ID)
  createdAt DateTime @default(now())
  villa     Villa?   @relation(fields: [villaSlug], references: [slug])

  @@index([villaSlug])
  @@index([email])
  @@index([status])
  @@index([source])
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  role     String  // "admin", "staff", etc.
  createdAt DateTime @default(now())
}

model Availability {
  id        Int      @id @default(autoincrement())
  villaSlug String
  date      DateTime @db.Date
  available Boolean  @default(true)
  source    String   // "website", "booking_com", "manual", etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([villaSlug, date], name: "villaSlug_date")
  @@index([villaSlug])
  @@index([date])
}

model SyncLog {
  id        Int      @id @default(autoincrement())
  villaSlug String
  checkIn   DateTime
  checkOut  DateTime
  available Boolean
  source    String   // "channel_manager", "booking_com", "manual"
  syncedAt  DateTime @default(now())
  success   Boolean  @default(true)
  error     String?

  @@index([villaSlug])
  @@index([syncedAt])
}
